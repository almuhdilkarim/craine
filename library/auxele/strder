}

function craine_lining_append() {
    echo "replace line on file"
}

function craine_locals_random() {

    local random_number=$(( ( RANDOM % 900000 ) + 100000 ))
    local locals_source="$1/$random_number"
    echo $locals_source
    unset random_number
    unset locals_source
}


function craine_basename_link() {
    local basename=$(basename "$$craine_link")
    echo "$1/$$basename"
    unset $basename
}