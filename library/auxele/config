#!/bin/env bash
# Configuration data 
 
set -e

## CONFIG GETDATA
function craine_prescon_geter() {
    echo "preset config getter"
}

function craine_proscon_geter() {
    echo "proset config getter"
}

function craine_protcon_geter() {
    echo "protos config getter"
}

function craine_config_keyfil() {

    test -f $1 && grep -E '[a-zA-Z0-9_]*=' "$1" | grep -E -v '^#' | cut -d'=' -f1 | awk '{print $1}'
}

function craine_config_getval() {
    
    test -f $1 && source "$1" 
}

function craine_config_editor() {

    test -f $1 && $EDITOR $1
    
}