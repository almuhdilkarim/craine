#!/bin/bash


set -e

source $(pwd)/library/helper/structs


if [[ -z $1 ]]; then
    echo "Error : need additional paramater" &&
    exit
fi


if [[ $1 == "--reset" ]];then
   craine_install 
fi


if [[ $1 == "--install" ]];then
    craine_install
fi


if [[ $1 == "--testing" ]];then
    craine_install
fi


if [[ $1 == "--build" ]];then
    echo "build iso"
fi


if [[ $1 == "--getapp" ]];then
    echo "build iso"
fi


if [[ $1 == "--deploy" ]];then
    echo "build iso"
fi
