#!/bin/bash


function craine_write_postmake() {
    if [[ -e "$1/posmak" ]]; then
        echo "" >> $raptor_makers  &&  cat "$1/posmak" >> $raptor_makers
    fi 
}

function craine_write_prepmake() {
    if [[ -e "$1/posmak" ]]; then
        echo "" >> $raptor_makers  &&  cat "$1/premak" >> $raptor_makers
    fi 
}

function craine_write_donemake() {
    if [[ -e "$1/purmak" ]]; then
        echo "" >> $raptor_makers  &&  cat "$1/purmak" >> $raptor_makers
    fi 
}