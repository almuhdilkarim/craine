#!/bin/bash




function craine_hacker_list_view() {
	echo "List available Profile"
}


function craine_hacker_list_show() {
	echo "Show Os Profile"
}


function craine_hacker_list_edit() {
	echo "Edit Os Profile"
}


function craine_hackers() {

	## OPTIONS PROC
	while getopts ":m:n:g:f:p" opt; do
		case $opt in
			m) mode="${OPTARG}"
			;;
			n) name="${OPTARG}"
			;;
			f) file="${OPTARG}"
			;;
			p) prof="${OPTARG}"
			;;
			g) gitr="${OPTARG}"
			;;
		esac
	done

	if [[ -z $gitr ]];then
		gitr="none"
	fi

	if [[ $mode == "edit" ]]&&[[ ! -z $name ]]; then
		craine_hacker_list_edit $name
	elif [[ $mode == "show" ]]&&[[ ! -z $name ]];then
		craine_hacker_list_show $name
	elif [[ $mode == "make" ]]&&[[ ! -z $name ]]; then
		craine_maker -n $name -g $gitr -f $file -p $prof 
	elif [[ $mode == "list" ]]; then
		craine_hacker_list_view
	else
		echo "Crain Error: -m ( process mode ) parameter note found." 
	fi
}
