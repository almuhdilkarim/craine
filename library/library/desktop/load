#!/bin/bash



## DESKTOP ENVIRONMENTS
if [[ $distro_desktop == "cosmic" ]];then
    desktop_type="cosmic"
elif [[ $distro_desktop == "gnome" ]];then
    desktop_type="gnome"
elif [[ $distro_desktop == "hyperland" ]];then
    desktop_type="hypers"
elif [[ $distro_desktop == "plasma" ]];then
    desktop_type="plasma"
else
    desktop_type="none"
fi


## OPTIONALY DOWNLOAD
if [[ $desktop_type != "none" ]]; then

    desktop_path="$applibs/kernels/$desktop_type/101"

    if [ -e "$applibs/kernels/$desktop_type/$distro_protoc/module" ];then
        desktop_path="$applibs/kernels/$desktop_type/$distro_protoc"
    fi

    test -e "$desktop_path/module" && cat "$desktop_path/module" >> "$initpkg"
    test -e "$desktop_path/config" && cp -fr "$desktop_path/config/*" "$initcfg"
    echo "Kernel environment loaded"
fi
