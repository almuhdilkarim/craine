

function raptor_deskt_post_sess() {
    rm -f /mnt/usr/share/wayland-session/gnome-wayland.desktop
    rm -f /mnt/usr/share/wayland-session/gnome.desktop
}

function raptor_deskt_post_srvc() {
    arch-chroot /mnt systemctl enable lightdm.service
    arch-chroot /mnt systemctl enable bluetooth.service
}

function raptor_deskt_post() {
    sleep 2 && clear
    echo "Desktop module configuration"
    raptor_deskt_post_sess
    raptor_deskt_post_srvc
    echo "Desktop module configured"
}