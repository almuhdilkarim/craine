#!/bin/bash


## KERNELS ENVIRONMENT
if [[ $distro_kernel == "zen" ]];then
    local kernel="linuzen"
elif [[ $distro_kernel == "lqx" ]];then
    local kernel="liquerix"
elif [[ $distro_kernel == "lts" ]];then
    local kernel="linuxlts"
elif [[ $distro_kernel == "lts" ]];then
    local kernel="linuxlts"
else
    local kernel="linuxer"
fi

echo $kernel

kernel_path="$applibs/kernels/$kernel/101"

if [ -e "$applibs/kernels/$kernel/$distro_protoc/module" ];then
    kernel_path="$applibs/kernels/$kernel/$distro_protoc"
fi

echo $kernel_path

test -e "$kernel_path/config" && cp -fr "$kernel_path/config/*" "$initcfg"
test -e "$kernel_path/module" && cat "$kernel_path/module"   >> "$initpkg"
echo "Kernel environment loaded"



function craine_moding_kernels() {
    test -e "$kernel_path/moding" && kernels_daemon="$kernel_path/moding" 
}
