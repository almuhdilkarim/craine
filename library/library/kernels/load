#!/bin/bash


## KERNELS ENVIRONMENT
if [[ $distro_kernel == "zen" ]];then
    kernel_type="linuzen"
elif [[ $distro_kernel == "lqx" ]];then
    kernel_type="liquerix"
elif [[ $distro_kernel == "lts" ]];then
    kernel_type="hardened"
elif [[ $distro_kernel == "hardened" ]];then
    kernel_type="hardened"
else
    kernel_type="linuxer"
fi

kernel_path="$applibs/kernels/$kernel_type/101"


if [ -e "$applibs/kernels/$kernel_type/$distro_protoc/module" ];then
    kernel_path="$applibs/kernels/$kernel_type/$distro_protoc"
fi


test -e "$kernel_path/module" && cat "$kernel_path/module" >>   "$raptor_packer"
test -e "$kernel_path/config" && cp -fr "$kernel_path/config/*" "$raptor_config"
echo "Kernel environment loaded"