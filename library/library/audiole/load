## AUDIO ENVIRONMENTS
if [[ $distro_audios == "alsa" ]];then
    audio_type="alsas"
elif [[ $distro_audios == "pipewire" ]];then
    audio_type="piper"
elif [[ $distro_audios == "pulse" ]];then
    audio_type="pulse"
else
    audio_type="none"
fi

## ONLYLOAD FORDESKTOP
if [[ $audio_type != "none" ]]; then

    audio_path="$applibs/kernels/$audio_type/101"

    if [ -e "$applibs/kernels/$audio_type/$distro_protoc/module" ];then
        audio_path="$applibs/kernels/$audio_type/$distro_protoc"
    fi

    test -e "$audio_path/module" && cat "$audio_path/module" >> "$initpkg"
    test -e "$audio_path/config" && cp -fr "$audio_path/config/*" "$initcfg"
    echo "Kernel environment loaded"
fi