#!/bin/bash

set -e


function craine_module_mitig_loader() {

    ## ENVIRONMENTS
    local mitig_dirs="$applibs/libhids"
    mitig_path="$mitig_dirs/101"
    

    ## LOAD MODULES    
    test -d "$mitig_dirs/$protoc_mitiga" &&  disks_path="$mitig_dirs/$protoc_mitiga"
    test -e "$mitig_path/module"   && cat "$mitig_path/module" >>   "$raptor_packer"
    test -e "$mitig_path/config/"* && cp -fr "$mitig_path/config/"* "$raptor_config"
    echo "Mitigation environment loaded"
}

craine_module_mitig_loader