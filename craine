#!/bin/bash

set -e



## TAKE OPTIONS
while getopts "o:n:b:m:a:l:p:" opt; do
    case $opt in
        o) proc="${OPTARG}"
        ;;
        n) name="${OPTARG}"
        ;;
        b) base="${OPTARG}"
        ;;
        m) mode="${OPTARG}"
        ;;
        a) adds="${OPTARG}"
        ;;
        l) link="${OPTARG}"
        ;;
        p) pitc="${OPTARG}"
        ;;
    esac
done


## CRAINE ENVI
craine_base=$base
craine_name=$name
craine_mode=$mode
craine_link=$link
craine_pitc=$pitc
craine_devs=true
craine_libs="/var/lib/craine" 
test -n $crdevs_stat && craine_libs=$(pwd)/library
source "$craine_libs/corest/loader"


## CRAINE MAIN
if [[ -n $proc ]];then
    if [[ $proc == "desktop" ]];then
        craine_guimode
    elif [[ $proc == "guides" ]];then
        craine_diamode
    elif [[ $proc == "tester" ]];then
        craine_testers
    elif [[ $proc == "proset" ]];then
        craine_proset $craine_mode
    elif [[ $proc == "preset" ]];then
        craine_preset $craine_mode
    elif [[ $proc == "protos" ]];then
        craine_protos $craine_mode
    elif [[ $proc == "editor" ]];then
        craine_editors
    elif [[ $proc == "create" ]];then
        craine_builder
    else
        notifer_error 'Operation parameter not found'
    fi
fi


## PRESET PROC
##if [[ -n $adds ]];then
#
#    if [[ $adds == "preset" ]]&&[[ -n $craine_name ]]&&[[ -n $craine_link ]];then
#        craine_preset -a  
#    else 
#        notifer_error 'Command parameter not found'
#    fi
#fi


## PRESET PROC