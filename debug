#!/bin/bash

set -e


## BOOT LOADERS
debuger=true
apppath="$(pwd)"
source "$apppath/library/striper"


## OPTIONS PROC
while getopts ":m:f:" opt; do
    case $opt in
        m) mode="${OPTARG}"
        ;;
        f) file="${OPTARG}"
        ;;
    esac
done


if [[ $mode == "dekstop" ]];then
    craine_dekstop
elif [[ $1 == "guided" ]]; then
    craine_termine
elif [[ $mode == "make" ]]&&[[ ! -z  $file ]];then
    craine_hackers_make $file
elif [[ $mode == "list" ]];then
    craine_hackers_list 
else
    echo "Craine Error: Mode not found"  
fi