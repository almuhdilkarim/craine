#!/bin/bash

set -e


## BOOT LOADERS
debuger=true
apppath="$(pwd)/library"
tespath="$(pwd)"
source "$apppath/striper"


## OPTIONS PROC
while getopts ":m:n:f:p" opt; do
    case $opt in
        m) mode="${OPTARG}"
        ;;
        n) name="${OPTARG}"
        ;;
        f) file="${OPTARG}"
        ;;
        p) prof="${OPTARG}"
        ;;
    esac
done


if [[ $mode == "desktop" ]];then
    craine_desktop
elif [[ $mode == "guide" ]]; then
    craine_termine
elif [[ ! -z $mode ]]&&[[ ! -z $name ]];then
    craine_hackers $mode $name $file $prof
else
    echo "Craine error: Mode parameter not found"  
fi