#!/bin/bash

set -e


## BOOT LOADERS
debuger=true
apppath="$(pwd)/library"
tespath="$(pwd)"
source "$apppath/striper"


## OPTIONS PROC
while getopts ":m:n:g:b:c" opt; do
    case $opt in
        m) mode="${OPTARG}"
        ;;
        n) name="${OPTARG}"
        ;;
        g) gitr="${OPTARG}"
        ;;
        b) base="${OPTARG}"
        ;;
        c) conf="${OPTARG}"
        ;;
    esac
done


if [[ $mode == "desktop" ]];then
    craine_desktop
elif [[ $mode == "guide" ]]; then
    craine_termine
elif [[ $mode == "make" ]]&&[[ ! -z $name ]]; then
    craine_maker $name $gitr $base $conf
elif [[ $mode == "edit" ]]&&[[ ! -z $name ]]; then
    craine_edito $name $gitr $base $conf
elif [[ $mode == "lab1" ]]; then
    craine_maker "tester1" git@github.com:yuros-learncamp/rogerlab1.git tester1
elif [[ $mode == "lab2" ]]; then
    craine_maker "tester2" git@github.com:yuros-learncamp/rogerlab2.git tester2 
elif [[ $mode == "lab3" ]]; then
    craine_maker "tester3" git@github.com:yuros-learncamp/rogerlab3.git tester3 
elif [[ $mode == "lab4" ]]; then
    craine_maker "tester4" git@github.com:yuros-learncamp/rogerlab4.git tester4 
elif [[ $mode == "lab5" ]]; then
    craine_maker "tester5" git@github.com:yuros-learncamp/rogerlab5.git tester5
else
    echo "Craine error: Mode parameter not found"  
fi