#!/bin/bash

## pacstrap installation
function craine_install_corest() {
    test -e $distro_package && pacstrap -U /mnt - < $distro_package 
}


## local file installation
function craine_install_locale() {
    echo "local install"
}


## user package installation
function craine_install_extern() {
    echo "extern install"
}


## flatpak installation
function craine_install_flaper() {
    echo "flaper install"
}


## pacman installation
function craine_install_pacman() {
    echo "pacman install"
}


## appimage installation
function craine_install_appimg() {
    echo "appimg install"
}


## biospack installation
function craine_install_bioser() {
    echo "bios install"
}


## android installation
function craine_install_androi() {
    pacstrap -U /mnt waydroid
}


## tarbal installation
function craine_install_tarbal() {
    echo "tarbal install"
}


function craine_install_ucodes() {

    procieidven=$(grep "vendor_id" /proc/cpuinfo | head -n 1 | awk '{print $3}')

    if [[ "$procieidven" == "GenuineIntel" ]]; then
        pacstrap -U /mnt intel-ucode
    elif [[ "$procieidven" == "AuthenticAMD" ]]; then
        pacstrap -U /mnt amd-ucode
    fi
}


function craine_install() {
    craine_install_corest
}